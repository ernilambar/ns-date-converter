{
	"env": {
		"browser": true,
		"node": true
	},
	"extends": [ "plugin:@wordpress/eslint-plugin/recommended" ],
	"parserOptions": {
		"requireConfigFile": false
	},
	"settings": {
		"react": {
			"version": "18.0"
		}
	},
	"globals": {
		"wp": true,
		"NSDC_APP": true
	},

	"rules": {
		"import/no-unresolved": "off",
		"no-unused-vars": "warn",
		"no-console": "warn",
		"no-alert": "error",
		"react/sort-comp": "error",
		"vars-on-top": "warn",
		"import/order": [
			"error",
			{
				"groups": [
					"builtin",
					"external",
					"internal",
					"parent",
					"sibling",
					"index",
					"object",
					"type"
				]
			}
		]
	}
}
